@model User
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div id="Log">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        <ul>
            <li>@Html.TextBoxFor(Model => Model.UserName, new { placeholder = "Kullanıcı Adı:" })</li>
            <li>@Html.TextBoxFor(Model => Model.Password, new { placeholder = "Şİfre:" })</li>
            <li><button id="btnKaydol">Giriş Yap</button> </li>
            <li>@Html.ActionLink("Şifremi Unuttum", "Forget", "Home") </li>
        </ul>
        
    }

</div>


<div id="reg">
@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    <ul>
        <li>@Html.TextBoxFor(Model => Model.FirstName, new { placeholder = "AD:" })</li>
        <li>@Html.TextBoxFor(Model => Model.LastName, new { placeholder = "SOYAD:" })</li>
        <li>@Html.TextBoxFor(Model => Model.UserName, new { placeholder = "KULLANICI ADI:" })</li>
        <li>@Html.TextBoxFor(Model => Model.Password, new { placeholder = "ŞİFRE:" })</li>
        <li>@Html.TextBoxFor(Model => Model.PasswordQuestion, new { placeholder = "GİZLİ SORU:" })</li>
        <li>@Html.TextBoxFor(Model => Model.PaswordAnswer, new { placeholder = "CEVAP:" })</li>
        <li>@Html.TextBoxFor(Model => Model.Email, new { placeholder = "MAİL:" })</li>
        <li>@Html.TextBoxFor(Model => Model.PhoneNumber, new { placeholder = "CSM:" })</li>
        <li><button id="btnKaydol">Kaydet</button> </li>


    </ul>
}
</div>



@if (TempData["Message"] != null)
{
    <div style="background-color: #2882a9; color: white; padding: 7px 15px; margin-top:15px;">
        @TempData["Message"]
    </div>
}